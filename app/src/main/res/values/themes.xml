<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyProj" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textViewStyle">@style/textView</item>
    </style>
    <style name="Theme.MyProj" parent="Base.Theme.MyProj" />
    <style name="textView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Theme.MyProjSkyBlue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/skyBlue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/skyBlue</item>
        <item name="android:statusBarColor">@color/skyBlue</item>
        <item name="android:textViewStyle">@style/textViewSkyBlue</item>
    </style>
    <style name="Theme.MyProjSkyBlue" parent="Base.Theme.MyProjSkyBlue" />
    <style name="textViewSkyBlue" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/skyBlue</item>
    </style>


    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9sp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>




</resources>